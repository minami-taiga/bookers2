<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<% if @book.errors.any? %>
<%= @book.errors.count %>error
<% @book.errors.full_messages.each do |massage| %>
<%= massage %>
<% end %>
<% end %>
    <div class="body">
      <div class="container">

        <p id="notice"></p>


        <div class="row">
  
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, size: '50x50', format: 'jpeg', fallback: "noimage.jpg" %><table class="table">
      <tbody><tr></tr> 
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
        
      </tr>
</tbody></table>


<% if @user.id == current_user.id %>
       <div class="row">
      <p><%= link_to "", edit_user_path(current_user.id), class: "glyphicon glyphicon-wrench col-xs-12 btn btn-default"%></p>
      <% end %>
       </div>
 


    <h2>New book</h2>
   <%= form_for(@book) do |f| %>
  <div class="field row">
    <h4>Title</h4>
  <%= f.text_field :title %>
  </div>

  <div class="field row">
   <h4>Body</h4>
  <%= f.text_area :body %>

  </div>

  <div class="actions row">
  <%= f.submit 'Create Book',class:"btn btn-primary" %>
  </div>
<% end %>  </div>
<div class="col-xs-9">
 <table class="table table-hover table-inverse">
  <thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
		<% @books.each do |book| %>
		<tr>
      <td><%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, size: '50x50', format: 'jpeg', fallback: "noimage.jpg" %></td>
      <% end %>
			<td><%=link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
  </thead>
	</table>
</div>

    <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>


